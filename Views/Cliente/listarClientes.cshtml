@model List<Clientes>

<body>
    <section class="container my-5">
        <h2 class="text-center mb-4">Listado de Clientes</h2>
        <a asp-controller="Cliente" asp-action="altaCliente" asp-route-idCliente="@(Model.Last().IdCliente+1)" class="btn btn-warning btn-sm">Agregar Cliente</a>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Telefono</th>
                        <th>Email</th>
                        <th>Modificar</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model)
                    {
                        <tr>
                            <td>@cliente.Nombre</td>
                            <td>@cliente.Telefono</td>
                            <td>@cliente.Email</td>
                            <td><a asp-controller="Cliente" asp-action="modificarCliente"
                                    asp-route-idCliente="@cliente.IdCliente"
                                    class="btn btn-warning btn-sm">Modificar</a></td>
                            <td><a asp-controller="Cliente" asp-action="eliminarCliente"
                                    asp-route-idCliente="@cliente.IdCliente" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</body>

</html>