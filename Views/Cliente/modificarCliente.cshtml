@section Scripts{<partial name="_ValidationScriptsPartial"/>}
@model ClienteViewModel
<form asp-controller="Cliente" asp-action="modificarCliente" class="container mt-4">
    <input hidden asp-for="@Model.IdCliente">
    <section class="mb-3">
        <label asp-for="@Model.Nombre" class="form-label"></label>
        <input asp-for="@Model.Nombre" class="form-control" value="@Model.Nombre">
    </section>
    <section class="mb-3">
        <label asp-for="@Model.Email" class="form-label"></label>
        <input asp-for="@Model.Email" class="form-control" value="@Model.Email">
    </section>
    <section class="mb-3">
        <label asp-for="@Model.Telefono" class="form-label"></label>
        <input asp-for="@Model.Telefono" class="form-control" value="@Model.Telefono">
    </section>
    <section class="d-flex justify-content-center">
        <input type="submit" value="Enviar" class="btn btn-primary">
    </section>
</form>